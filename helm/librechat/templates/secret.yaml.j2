---
apiVersion: v1
kind: Secret
metadata:
  name: librechat-credentials-env
  namespace: {{ .Values.namespace }}
type: Opaque
stringData:
  # Required: LibreChat internal encryption and JWT secrets
  # Generate random secrets using: openssl rand -hex 32
  # Or use: https://www.librechat.ai/toolkit/creds_generator
  CREDS_KEY: {{ .Values.secrets.creds_key }}
  JWT_SECRET: {{ .Values.secrets.jwt_secret }}
  JWT_REFRESH_SECRET: {{ .Values.secrets.jwt_refresh_secret }}

  # Required: Meilisearch master key
  # Generate using: openssl rand -hex 16
  MEILI_MASTER_KEY: {{ .Values.secrets.meili_master_key }}

  # Optional: Custom OpenAI-compatible endpoint API key
  # Reference in librechat.yaml using ${CUSTOM_API_KEY}
  CUSTOM_MODEL_URL: {{ .Values.secrets.custom_model_url }}
  CUSTOM_MODEL_KEY: {{ .Values.secrets.custom_model_key }}

  # Default user credentials (used by user-init-job.yaml
  DEFAULT_USER_NAME: "{{ .Values.default_user.name }}"
  DEFAULT_USER_EMAIL: "{{ .Values.default_user.email }}"
  DEFAULT_USER_PASSWORD: "{{ .Values.default_user.password }}"
